{
    "$schema" : "https://json-schema.org/draft/2020-12/schema",
    "$id" : "http://example.com/movie.schema.json",
    "title" : "Movie",
    "description" : "An entry for a movie",
    "type" : "object",
    "properties" : {
        "title" : { "type" : "string" },
        "year" : { "type" : "integer" },
        "director" : {
            "type" : ["string","array"],
            "items" : { "type" : "string" }
        },
        "cinematographer" : { "type" : "string" },
        "awards" : { "type": "array", "items" : { "$ref" : "#/$def/award" } },
        "accolades" : { "type": "array", "items" : { "$ref" : "#/$def/award" } }
    },
    "$def" : {
        "award" : {
            "type" : "object",
            "properties" : {
                "name" : { "type" : "string" },
                "category" : { "type" : "string" },
                "received" : { "type" : "boolean" }
            }
        }
    },
    "oneOf" : [
        { "required" : [ "title", "director", "awards" ] },
        { "required" : [ "title", "director", "accolades" ] }
    ]
}